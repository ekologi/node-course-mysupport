<h1>{{ title }}</h1>
<p>Silahkan menambahkan ide yang diinginkan</p>
{{#if errors }}
    <ul class="alert alert-danger">
        {{#each errors}}
            <li>{{ this.msg }}</li>
        {{/each}}
    </ul>
{{/if}}
{{#if success_msg}}
    <div class="alert alert-success">{{success_msg}}</div>
{{/if}}


<form action="/ideas" method="post">
    <div class="form-group">
        <label for="title">Judul</label>
        <input type="text" class="form-control" name="title" placeholder="input judul">
    </div>
    <div class="form-group">
        <label for="details">Detail</label>
        <textarea class="form-control" name="details" placeholder="input detail"></textarea>
    </div>
    <button class="btn-primary" type="submit">Submit</button>
   
</form>